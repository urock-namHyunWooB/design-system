{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Button DSL 0.0.1",
  "type": "object",
  "required": ["version", "component", "sizes", "types"],
  "properties": {
    "version": { "type": "string", "const": "0.0.1" },
    "component": { "type": "string", "const": "button" },
    "sizes": {
      "type": "object",
      "required": ["S", "M", "L"],
      "properties": {
        "S": { "$ref": "#/$defs/sizeSpec" },
        "M": { "$ref": "#/$defs/sizeSpec" },
        "L": { "$ref": "#/$defs/sizeSpec" }
      },
      "additionalProperties": false
    },
    "types": {
      "type": "object",
      "required": [
        "filled",
        "outlined-black",
        "outlined-blue",
        "outlined-red",
        "text-blue",
        "text-black",
        "filled-red"
      ],
      "properties": {
        "filled": { "$ref": "#/$defs/typeSpec" },
        "outlined-black": { "$ref": "#/$defs/typeSpec" },
        "outlined-blue": { "$ref": "#/$defs/typeSpec" },
        "outlined-red": { "$ref": "#/$defs/typeSpec" },
        "text-blue": { "$ref": "#/$defs/typeSpec" },
        "text-black": { "$ref": "#/$defs/typeSpec" },
        "filled-red": { "$ref": "#/$defs/typeSpec" }
      },
      "additionalProperties": false
    },
    "responsive": { "type": "object", "additionalProperties": true },
    "accessibility": { "type": "object", "additionalProperties": true }
  },
  "$defs": {
    "sizeSpec": {
      "type": "object",
      "required": ["container", "padding"],
      "properties": {
        "container": {
          "type": "object",
          "required": ["height", "radius"],
          "properties": {
            "height": { "type": "number", "minimum": 0 },
            "radius": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "padding": {
          "type": "object",
          "required": ["top", "right", "bottom", "left"],
          "properties": {
            "top": { "type": "number", "minimum": 0 },
            "right": { "type": "number", "minimum": 0 },
            "bottom": { "type": "number", "minimum": 0 },
            "left": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "gap": { "type": "number", "minimum": 0 },
        "label": {
          "type": "object",
          "properties": { "size": { "type": "number", "minimum": 0 } },
          "additionalProperties": false
        },
        "icon": {
          "type": "object",
          "properties": { "size": { "type": "number", "minimum": 0 } },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "typeSpec": {
      "type": "object",
      "required": ["container", "label"],
      "properties": {
        "container": {
          "type": "object",
          "required": ["bg", "border"],
          "properties": {
            "bg": { "type": ["string", "null"] },
            "border": {
              "type": "object",
              "required": ["width", "color"],
              "properties": {
                "width": { "type": "number", "minimum": 0 },
                "color": { "type": "string", "minLength": 1 }
              },
              "additionalProperties": false
            },
            "shadow": { "type": ["string", "null"] }
          },
          "additionalProperties": false
        },
        "label": {
          "type": "object",
          "required": ["color"],
          "properties": { "color": { "type": "string", "minLength": 1 } },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
